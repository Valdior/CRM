{# src/CRM/UserBundle/Resources/views/layout.html.twig #}

{% extends "CRMCoreBundle::layout.html.twig" %}

{% block body %}

{% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }} azd
                </div>
            {% endfor %}
        {% endfor %}
<div class="col-lg-offset-3 col-lg-6" style="margin-top: 30%;">    
    <div class="panel panel-default">
        <div class="panel-body">
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    </div>
</div>            
{% endblock %}