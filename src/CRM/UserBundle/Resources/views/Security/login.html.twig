{% extends "CRMUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    {{ parent() }}
<link rel="stylesheet" href="{{ asset('dist/css/bootstrap-theme-crm-login.css') }}" type="text/css" />
{% endblock %}    

{% block fos_user_content %}
{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <ul class="list-group">
        <li class="list-group-item">
            <div class="form-group">
                <label for="username" class="col-lg-5 control-label">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </li>
        <li class="list-group-item">
            <div class="form-group">
                <label for="password" class="col-lg-5 control-label">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" />
            </div>
        </li>    
        <li class="list-group-item">
            <div class="form-group">
                <div class="col-lg-offset-5">
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary" />
                </div>
            </div>
        </li>
    </ul>
</form>
{% endblock fos_user_content %}
